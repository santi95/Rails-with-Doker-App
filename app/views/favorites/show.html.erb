<div class="home-jumbotron-2">
</div>
<div class="sub_bar">
  <h1 id="margin-title">Favorites</h1>
</div>



<hr class="my-4">
    <div class="row">
        <div class="container-post-forum">
        <% @user.favorites.each do |post| %>
            <br>
            <div class="card">
                <div class="card_post_tittle">
                    <%= link_to post.title, forum_post_path(post.forum, post) %>
                </div>
                <div class="smalltext">
                    Posted by: <%= post.user.name %>    at: <%= post.updated_at %>
                </div>
                <svg class="octicon octicon-comment v-align-middle" viewBox="0 0 16 16" version="1.1" width="16" height="16" aria-hidden="true"><path fill-rule="evenodd" d="M14 1H2c-.55 0-1 .45-1 1v8c0 .55.45 1 1 1h2v3.5L7.5 11H14c.55 0 1-.45 1-1V2c0-.55-.45-1-1-1zm0 9H7l-2 2v-2H2V2h12v8z"/></svg>
                <span class="text-small text-bold"> <%= post.comments.count %> </span>
            </div>
            <hr class="my-4">
        <%end%>
    </div>