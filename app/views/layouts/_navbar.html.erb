<header class="navbar navbar-fixed-top navbar-inverse" id="navbar">
  <div class="container">
    <nav>
      <div class="navbar-brand">
        <img src="../../assets/llamita.png" id="llamita">
      </div>
      <div class="navbar-brand">
        <a class="navbar-item">
         <%= link_to "HOME", root_path, id: "general-menu"%>
        </a>
      </div>

      <div class="navbar-brand">
        <a class="navbar-item">
         <%= link_to "Forums",   forums_path, id: "general-menu"%>
        </a>
      </div>

      <div class="navbar-brand">
        <a class="navbar-item">
         <%= link_to "Stats",   stat_path, id: "general-menu"%>
        </a>
      </div>


      <% if user_signed_in? %>
        <div class="navbar-brand">
          <a class="navbar-item">
          <%= link_to "Favorites",   favorites_path, id: "general-menu"%>
          </a>
        </div>
      <%end%>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <div class="navbar-brand">
            <a href="/users/edit">
              <% if String(current_user.user_img) != "/images/original/missing.png" %>
                <%= image_tag current_user.user_img.url(:thumb), :style => "height: 40px; width: 40px;" %>
              <%else%>
                <p id="no-picture-user"><%= current_user.name %></p>
              <% end %>
            </a>
          </div>
          <div class="navbar-brand">
            <a href="/users/edit">
             <%= link_to "Log Out  ", destroy_user_session_path, method: :delete , id: "general-menu"%>
