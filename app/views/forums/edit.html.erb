
<div class="overlay"></div>
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <div class="site-heading">
        <h1>Edit Forum </h1>
        <%= render "form" %>
        <% if can? :destroy, @forum %>
        <div class="col-6 pull-left separado">
          <div class="downstairs"><%= link_to '<button class="btn btn-warning">Delete</button>'.html_safe, forum_path(@forum), method: :delete, data: {confirm:
            "Are you sure?"}%>
            </div>
          <% end %>
          </div>
        </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
